# ==========================================
# Parse Server Configuration
# ==========================================

# Server Configuration
NODE_ENV=production
PORT=1337
HOST=0.0.0.0

# Application IDs and Keys
APP_ID=myAppId
MASTER_KEY=myMasterKey
CLIENT_KEY=myClientKey
FILE_KEY=myFileKey
REST_API_KEY=myRestApiKey
JAVA_KEY=myJavaKey

# Database Configuration
DATABASE_URI=mongodb://localhost:27017/dev
# For MongoDB Atlas:
# DATABASE_URI=mongodb+srv://username:password@cluster.mongodb.net/dbname

# Server URLs
SERVER_URL=http://localhost:1337/parse

# Cloud Code
CLOUD_MAIN=./cloud/main.js

# Dashboard Configuration
DASHBOARD_USER=admin
DASHBOARD_PASS=admin123

# Live Query Configuration
REDIS_URL=redis://localhost:6379

# Logging
LOG_LEVEL=info

# Email Configuration (Optional)
EMAIL_FROM=noreply@example.com
MAILGUN_API_KEY=
MAILGUN_DOMAIN=

# Push Notifications (Optional)
ANDROID_SENDER_ID=
ANDROID_API_KEY=
IOS_CERTIFICATE=
IOS_CERTIFICATE_PASSWORD=

# File Storage (Optional)
S3_BUCKET=
S3_REGION=
S3_ACCESS_KEY=
S3_SECRET_KEY=

# Security
ENFORCE_PRIVATE_USERS=false
ALLOW_CLIENT_CLASS_CREATION=true
ALLOW_CUSTOM_OBJECT_ID=true

# GraphQL
GRAPHQL_PATH=/graphql
GRAPHQL_PLAYGROUND_PATH=/graphql-playground
